{
  "name": "project-activity-manager",
  "version": "1.0.0",
  "description": "A tool for managing projects, and its associated tasks in an effecient manner",
  "main": "src/app.js",
  "author": "Rituraj Borpujari",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "mongoose": "^5.9.9"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/mongoose": "^5.7.12",
    "@types/node": "^13.13.0",
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.3",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start": "yarn build && yarn serve",
    "build": "tsc",
    "serve": "node build/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon build/app.js"
  }
}
